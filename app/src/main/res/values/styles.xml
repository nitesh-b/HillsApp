<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/matteBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/matteBlack</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>
    <!--Button Style-->

    <!--Custom Animation-->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slidein_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slideout_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/slidein_down</item>
        <item name="android:activityCloseExitAnimation">@anim/slideout_down</item>
    </style>

    <!--Splash Screen-->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashback</item>
    </style>

    <!--Hamburger Icon Color-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <!--Navigation Text Styling-->

    <style name="NavigationViewStyle">
        <item name="android:textSize">12sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>

    <!--Style for Navigation Drawer Main Item -->
    <style name="NavigationDrawerMainTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#00a3df</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/galano_grotesque_semibold</item>
    </style>

    <!--Style for Navigation Drawer sub Items -->
    <style name="NavigationDrawerSubTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
    </style>


    <!--Bottom navigation styling-->
    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/white</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/whiteTransparent</item>

    </style>


</resources>
