<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="searchview.toolbar.com.searchviewtoolbar.MainActivity"
    tools:openDrawer="start"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_alignParentTop="true"
            />

        <FrameLayout
            android:id="@+id/mainFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigation"
            android:layout_below="@id/toolbar"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="4dp"
            app:itemBackground="@color/bottomNavigation"
            app:itemIconTint="@color/nav_color_selector"
            app:itemTextColor="@color/nav_color_selector"
            app:menu="@menu/menu_items" />

        <ListView
            android:id="@+id/brandListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:alpha="1"
            android:background="@color/colorPrimary"
            android:padding="4dp"
            android:visibility="gone" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="false"

        android:background="@drawable/drawer_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/matteBlack">

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:padding="2dp"
                android:text="Notifications"
                android:textAlignment="center"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/drawer_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawer_background"
                android:foregroundGravity="right"
                android:padding="10dp" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_menuDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawerBlack"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextAppearance="@style/NavigationViewStyle"
        app:itemTextColor="@color/white"
        android:fitsSystemWindows="false"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/navbg"
                android:gravity="start|bottom"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/drawerLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:adjustViewBounds="true"
                    android:src="@drawable/creative_logo" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/drawerBlack"
                    android:orientation="vertical">


                    <TableLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="29dp"
                                android:layout_height="36dp"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/low_icon" />

                            <TextView
                                android:id="@+id/alwaysLowPriceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:contextClickable="true"
                                android:text="always low price"
                                android:textColor="@color/textview_item_clicked"
                                android:theme="@style/NavigationDrawerMainTextStyle" />

                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="29dp"
                                android:layout_height="36dp"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/special_icon" />

                            <TextView
                                android:id="@+id/specialOfferText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:contextClickable="true"
                                android:text="Special Offers"
                                android:textColor="@color/textview_item_clicked"
                                android:theme="@style/NavigationDrawerMainTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="29dp"
                                android:layout_height="36dp"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/campaign" />

                            <TextView
                                android:id="@+id/latestUpdatesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:contextClickable="true"
                                android:text="latest updates"
                                android:textColor="@color/textview_item_clicked"
                                android:theme="@style/NavigationDrawerMainTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="29dp"
                                android:layout_height="36dp"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_resources" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:contextClickable="true"
                                android:text="People &amp; resources"
                                android:textColor="@color/textview_item_clicked"
                                android:theme="@style/NavigationDrawerMainTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <Space />

                            <TextView
                                android:id="@+id/articleandvidoes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:contextClickable="true"
                                android:text="Articles and Videos"
                                android:theme="@style/NavigationDrawerSubTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <Space />

                            <TextView
                                android:id="@+id/finance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Finance"
                                android:theme="@style/NavigationDrawerSubTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <Space />

                            <TextView
                                android:id="@+id/partnerProgram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Partner Program"
                                android:theme="@style/NavigationDrawerSubTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <Space />

                            <TextView
                                android:id="@+id/legacyFirmwareDownload"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:maxLines="2"
                                android:text="Legacy Firmware Download"
                                android:theme="@style/NavigationDrawerSubTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="29dp"
                                android:layout_height="36dp"
                                app:srcCompat="@drawable/ic_faq" />

                            <TextView
                                android:id="@+id/faqs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:clickable="true"
                                android:text="@string/faq"
                                android:textColor="@color/textview_item_clicked"
                                android:theme="@style/NavigationDrawerMainTextStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="@dimen/row_spacing_bottom"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="29dp"
                                android:layout_height="36dp"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_aboutus" />

                            <TextView
                                android:id="@+id/contactUs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:contextClickable="true"
                                android:text="Contact us"
                                android:textColor="@color/textview_item_clicked"
                                android:theme="@style/NavigationDrawerMainTextStyle" />

                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="4dp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Connect with us"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_between_menu_items"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/facebookIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="18dp"
                                android:src="@drawable/ic_hills_facebook_circle_icon" />

                            <ImageView
                                android:id="@+id/linkedInIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="12dp"
                                android:src="@drawable/ic_hills_linkedin_circle_icon" />

                            <ImageView
                                android:id="@+id/youtubeIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="12dp"
                                android:src="@drawable/ic_hills_youtube_circle_icon" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
